#!/bin/bash

DIRECTORY_TO_OBSERVE=$1
BUILD_SCRIPT=$2

function block_for_change {
    inotifywait-win -r \
      -e modify,move,create,delete \
      $DIRECTORY_TO_OBSERVE
}

function build {
    sleep 0.1
    $BUILD_SCRIPT
}

build
while block_for_change; do
    echo "--------------------------------------------------------------------------"
        build
    echo "--------------------------------------------------------------------------"
done
